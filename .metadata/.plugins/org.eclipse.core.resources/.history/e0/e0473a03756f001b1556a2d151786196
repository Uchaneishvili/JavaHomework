import java.util.Scanner;

public class HomeworkThree {

	public static void main(String[] args) {
		Scanner scnr = new Scanner (System.in);
		
		String input = null;
		
		while(!input.equals("!")) {
			System.out.print("Type a vowel from the keyboard: ");
			input = scnr.nextLine();
			
		}
		
	}

}
