
public class HomeworkTwo {

	public static void main(String[] args) {
		
		int sumOfEven = 0;
		int sumOfEvenThousand = 0;
		for(int i = 0; i < 100; i++) {
			int evenNumbers = i % 2;
			if(evenNumbers == 0) {
				sumOfEven = sumOfEven + i;
			}
		}

		
		for(int i = 0; i < 1000; i++) {
			int evenNumbers = i % 2;
			if(evenNumbers == 0) {
				sumOfEvenThousand = sumOfEvenThousand + i;
			}
		}
		
		System.out.print("Answer is: ");
		System.out.println(sumOfEvenThousand - sumOfEven);
	}

}
